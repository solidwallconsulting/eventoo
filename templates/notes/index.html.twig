{% extends 'base.html.twig' %}

{% block title %}Notes index{% endblock %}

{% block body %}
    <h1>Notes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td>{{ note.id }}</td>
                <td>{{ note.content }}</td>
                <td>{{ note.date ? note.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('notes_show', {'id': note.id}) }}">show</a>
                    <a href="{{ path('notes_edit', {'id': note.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notes_new') }}">Create new</a>
{% endblock %}
