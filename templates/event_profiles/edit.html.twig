
{% extends app.user.roles[0] =='ROLE_CLIENT'
? 'base-client.html.twig' 
: 'base.html.twig' %}
{% block title %}
	{% trans into app.session.get('lng') %}Ajouter un profil{% endtrans %}
{% endblock %}

{% block body %}
	<!--begin::Subheader-->
	<div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
		<div
			class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
			<!--begin::Info-->
			<div
				class="d-flex align-items-center flex-wrap mr-1">

				<!--begin::Page Heading-->
				<div
					class="d-flex align-items-baseline flex-wrap mr-5">
					<!--begin::Page Title-->
					<h5 class="text-dark font-weight-bold my-1 mr-5">
						{% trans into app.session.get('lng') %}Ajouter un profil{% endtrans %}
					</h5>
					<!--end::Page Title-->

					<!--begin::Breadcrumb-->
					<ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
						<li class="breadcrumb-item">
							<a href="/" class="text-muted">{% trans into
                                app.session.get('lng') %}Accueil{% endtrans %}</a>
						</li>

						<li class="breadcrumb-item">
							<a href="{{ path('events_details',{id:event.id}) }}" class="text-muted">
								{{event.name}}</a>
						</li>
						<li class="breadcrumb-item">
							<a href="" class="text-muted">{% trans into app.session.get('lng') %}Modifier un profil{% endtrans %}</a>
						</li>

					</ul>
					<!--end::Breadcrumb-->

				</div>
				<!--end::Page Heading-->
			</div>
			<!--end::Info-->
		</div>
	</div>
	<!--end::Subheader-->


    

	<div
		class="card card-custom card-stretch gutter-b">
		<!--begin::Header-->
		<div class="card-header border-0 py-5">
			<h3 class="card-title align-items-start flex-column">
				<span class="card-label font-weight-bolder text-dark">{% trans into app.session.get('lng') %}Modifier un profil{% endtrans %}</span>

			</h3>
			<div class="card-toolbar">

				<a class="btn btn-success font-weight-bolder font-size-sm" href="{{ path('events_details',{id:event.id}) }}">
					<span class="svg-icon svg-icon-md svg-icon-white">
						<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewbox="0 0 24 24" version="1.1">
							<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
								<polygon points="0 0 24 0 24 24 0 24"/>
								<rect fill="#000000" opacity="0.3" transform="translate(15.000000, 12.000000) scale(-1, 1) rotate(-90.000000) translate(-15.000000, -12.000000) " x="14" y="7" width="2" height="10" rx="1"/>
								<path d="M3.7071045,15.7071045 C3.3165802,16.0976288 2.68341522,16.0976288 2.29289093,15.7071045 C1.90236664,15.3165802 1.90236664,14.6834152 2.29289093,14.2928909 L8.29289093,8.29289093 C8.67146987,7.914312 9.28105631,7.90106637 9.67572234,8.26284357 L15.6757223,13.7628436 C16.0828413,14.136036 16.1103443,14.7686034 15.7371519,15.1757223 C15.3639594,15.5828413 14.7313921,15.6103443 14.3242731,15.2371519 L9.03007346,10.3841355 L3.7071045,15.7071045 Z" fill="#000000" fill-rule="nonzero" transform="translate(9.000001, 11.999997) scale(-1, -1) rotate(90.000000) translate(-9.000001, -11.999997) "/>
							</g>
						</svg>
					</span>
					{% trans into app.session.get('lng') %}Retour{% endtrans %}</a>
			</div>
		</div>
		<!--end::Header-->

		<!--begin::Body-->
		<div class="card-body py-0">
 
            <div class="row">
                <div class="col-sm-6">
                    {{ form_start(form, {'attr': {'id': 'add_event_profile'}}) }}
                    {{ form_widget(form) }}
                   
                    <button class="btn btn-primary">{% trans into app.session.get('lng') %}Enregistrer{% endtrans %}</button>
                {{ form_end(form) }}
                </div>
                <div class="col-sm-6">

                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label font-weight-bolder text-dark">{% trans into app.session.get('lng') %}Gestion des champs{% endtrans %}</span>
        
                    </h3> 
        
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>{% trans into app.session.get('lng') %}Rechercher des champs{% endtrans %}</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text line-height-0 py-0">
                                            <span class="svg-icon"><!--begin::Svg Icon | path:assets/media/svg/icons/General/Search.svg--><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <rect x="0" y="0" width="24" height="24"></rect>
                <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"></path>
                <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero"></path>
            </g>
        </svg><!--end::Svg Icon--></span>								</span>
                                    </div>
                                    <input event="{{event.id}}" profile="{{event_profile.id}}" event="{{event.id}}" id="search-input" type="text" class="form-control" placeholder="{% trans into app.session.get('lng') %}Rechercher des champs{% endtrans %}" aria-describedby="basic-addon2">
         
                                </div>
                            </div>
        
        
                        </div>
                    </div>
        
        
					<div class="row">
                        <div class="col-sm-12">
                            <div id="alert-section"></div>
                        </div>
                    </div>
        
                    <div class="row">
                        <div class="col-sm-12">
                            <div id="preview-list-feilds"></div>
                        </div>
                    </div>
					<hr>
					<div class="row">
                        <div class="col-sm-12">
                            <div>
								{% for item in event_profile.eventAssociatedProfileFeilds %}
									

									
										<div class="d-flex flex-wrap align-items-center justify-content-between w-100">
											<!--begin::Info-->
											<div class="d-flex flex-column align-items-cente py-2 w-75">
												<!--begin::Title-->
												<a href="#" class="text-dark-75 font-weight-bold text-hover-primary font-size-lg mb-1">
												

												{% if app.session.get('lng') == "en_EN" %}  
													{{ item.field.labelEn }}
												{% else %}
													{{ item.field.labelfr }}
												{% endif %}
												</a>
												<!--end::Title-->
						
											</div>
											<!--end::Info-->

											<!--begin::Label-->
											<span association-id="{{item.id}}" class="c-pointer remove-feild-from-profile label label-lg label-light-primary label-inline font-weight-bold py-4">
												{% if app.session.get('lng') == "en_EN" %}  
													remove
												{% else %}
													retirer
												{% endif %}
											</span>
											<!--end::Label-->
										</div>
									 
								{% endfor %}
							</div>
                        </div>
                    </div>
        

        
                </div>
            </div>



 




		</div>
		<!--end::Body-->
	</div>

 


{% endblock %}


{% block javascripts %}
{{ parent() }}

<script src="{{ asset('/assets/js/profiles/add-profile.js') }}"></script>
{% endblock %}