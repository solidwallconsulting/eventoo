{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}

<link href="{{ asset('/assets/css/pages/wizard/wizard-1.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block body %}
 


<!--begin::Content-->
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-6  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">

                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline flex-wrap mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-1 mr-5"> {% trans into app.session.get('lng')
                        %}Organisateurs{%
                        endtrans %} </h5>
                    <!--end::Page Title-->

                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                         <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                            <li class="breadcrumb-item">
                                <a href="/" class="text-muted">{% trans into
                                    app.session.get('lng') %}Accueil{% endtrans %}</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{ path('clients_index') }}" class="text-muted">{% trans into app.session.get('lng') %}Organisateurs{% endtrans %}
                                </a>
                            </li>
                        
                        <li class="breadcrumb-item">
                            <a href="#" class="text-muted">{% trans into app.session.get('lng') %}Création d’un compte organisateur{% endtrans %}
                            </a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->

            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">

            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->

    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class=" container ">
            <div class="card card-custom">
                <form class="form" id="add_client_form" method="post" enctype="multipart/form-data">
                    <input type="hidden" id="selectedCountryIndex" value="" name="countryIndex" />
                    <div class="card-header">
                        <h3 class="card-title">
                            Création d’un compte organisateur 
                        </h3>
                         
                    </div>

                    <div class="card-body">
                        
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>* {% trans into app.session.get('lng') %}Avatar{% endtrans  %}</label><br>


                                    <div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalLabel"
                                        style="display: none;" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="modalLabel">{% trans into app.session.get('lng')
                                                        %}Recadrer l'image{% endtrans %}</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="img-container">
                                                        <img id="image"
                                                            src="{{ asset('/assets/media/users/blank.png') }}">
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{%
                                                        trans into app.session.get('lng') %}Annuler{% endtrans %}</button>
                                                    <button type="button" class="btn btn-primary" id="crop">Crop</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <img class="rounded" width="150px" id="avatar"
                                        src="{{ asset('/assets/media/users/blank.png') }}"
                                        alt="avatar">
        
                                    <input type="file" name="photo" id="cropper_image" style="visibility: hidden;" >
                                    <div class="fv-plugins-message-container">
                                        <div data-field="civility" data-validator="notEmpty" class="fv-help-block" id="photoErr"> 
                                        </div>
                                    </div>

        
        
                                </div>

                            </div>
                            <div class="col-sm-6">
                                <div class="image-input image-input-outline"  >
                                    <label>* {% trans into app.session.get('lng') %}Logo de la société{% endtrans  %}</label>
        
        
                                    <br>


                                    <div class="modal fade" id="modal-logo" tabindex="-1" aria-labelledby="modalLabel"
                                        style="display: none;" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="modalLabel">{% trans into app.session.get('lng')
                                                        %}Recadrer l'image{% endtrans %}</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="img-container">
                                                        <img id="image-logo"
                                                            src="{{ asset('/assets/media/users/blank.png') }}">
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{%
                                                        trans into app.session.get('lng') %}Annuler{% endtrans %}</button>
                                                    <button type="button" class="btn btn-primary" id="crop-logo-btn">Crop</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <img class="rounded" width="150px" id="logo"
                                        src="{{ asset('/assets/media/users/blank.png') }}"
                                        alt="avatar">
        
                                    <input type="file" name="logo" id="cropper_logo" style="visibility: hidden;">
                                    <div class="fv-plugins-message-container">
                                        <div data-field="civility" data-validator="notEmpty" class="fv-help-block" id="logoErr"> 
                                        </div>
                                    </div>


                                </div>

                            </div>
                        </div>







                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Nom de l’organisateur{% endtrans %}</label>
                            <input type="text" class="form-control form-control-solid form-control-lg" name="clientName"
                                placeholder="{% trans into app.session.get('lng') %}Saisissez le Nom de l’organisateur 0/75{% endtrans %}" value="" />

                        </div>


                        


                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Civilité {% endtrans
                                %}</label>


                            <select name="civility" class="form-control form-control-solid form-control-lg">
                                <option value="">{% trans into app.session.get('lng') %}Choisir votre civilité{%
                                    endtrans %}</option>
                                <option value="Mr"> Mr </option>
                                <option value="Mme">Mme</option>

                            </select>

                        </div>

                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Prénom{% endtrans
                                %}</label>
                            <input type="text" class="form-control form-control-solid form-control-lg" name="firstname"
                                placeholder="{% trans into app.session.get('lng') %}Saisissez votre prénom 0/50{% endtrans %}" value="" />

                        </div>

                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Nom{% endtrans
                                %}</label>
                            <input type="text" class="form-control form-control-solid form-control-lg" name="lastname"
                                placeholder="{% trans into app.session.get('lng') %}Saisissez votre nom 0/50{% endtrans %}" value="" />

                        </div>


                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Fonction{% endtrans %}</label>
                            <input type="text" class="form-control form-control-solid form-control-lg" name="function"
                                placeholder="{% trans into app.session.get('lng') %}Saisissez votre fonction 0/75{% endtrans %}" value="" />

                        </div>

                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Téléphone {% endtrans
                                %}</label>
                            <input type="tel" class="form-control form-control-solid form-control-lg" name="phone"
                                placeholder="{% trans into app.session.get('lng') %}Saisissez votre numéro de téléphone{% endtrans %}" value="" id="mobile-number" />

                        </div>

                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Email{% endtrans %}</label>
                            <input type="email" class="form-control form-control-solid form-control-lg" name="email"
                                placeholder="{% trans into app.session.get('lng') %}Saisissez votre email{% endtrans %}" value="" />

                        </div>
                        <!--end::Input-->

                        <!--begin::Input-->
                        <div class="form-group">
                            <label>* {% trans into app.session.get('lng') %}Mot de passe{% endtrans
                                %}</label>
                            

                            <div class="input-group"> 
                           
                                <input type="password" class="form-control form-control-solid form-control-lg password-target"
                                name="password" placeholder="{% trans into app.session.get('lng') %}Saisissez votre mot de pass{% endtrans %}" value="" />


                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="icon-2x text-dark-50 flaticon-eye password-toogler"></i>
                                    </span>
                                </div>
                            </div>
                        </div>


                        

                        


                        
                        <!--end::Input-->

                        <div class="form-group">
                            <label>{% trans into app.session.get('lng') %}Envoyer un mail de
                                confirmation{% endtrans %}</label>
                            <div class="checkbox-inline">
                                <label class="checkbox">
                                    <input type="checkbox" checked="checked" name="Checkboxes1">
                                    <span></span>
                                    {% trans into app.session.get('lng') %}Envoyer{% endtrans %}
                                </label>
                            </div>


                        </div>





                    </div>

                    <div class="card-footer">
                        
                        <button type="button" class="btn btn-primary font-weight-bold mr-2" name="submitButton" id="pre-validation">{% trans
                            into app.session.get('lng') %}Ajouter{% endtrans %}</button>
                        <button type="reset" class="btn btn-light-primary font-weight-bold">{% trans into
                            app.session.get('lng') %}Annuler{% endtrans %}</button>

                    </div>


                </form>





                <!--end::Wizard-->
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
{% endblock %}


{% block javascripts %}
{{ parent() }}

<script src="{{ asset('/assets/js/clients/add.js') }}"></script>
{% endblock %}