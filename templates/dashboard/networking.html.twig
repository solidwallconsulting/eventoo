                <div class="col-md-12">
                    <div class="row">
                        {% for item in participants %}
                            <div class="col-12 participant-search " fullname="{{item.user.firstname}} {{item.user.lastname}}">
                                <!--begin::Card-->
                                <div class="card card-custom gutter-b card-stretch">
                                    <!--begin::Body-->
                                    <div class="card-body pt-4">
                                        
                                        

                                        <div class="d-flex">
                                            <div class="main-info">
                                                    <div  class="">
                                                    <!--begin::Pic-->
                                                    <div  class="text-center">
                                                        <!--begin::Pic-->
                                                        <div class=" mr-4 mt-lg-0 mt-3">
                                                            <div class="symbol symbol-circle symbol-lg-95">
                                                                <img src="{{item.user.photoURL}}" alt="image">
                                                            </div> 
                                                        </div>
                                                        <!--end::Pic-->
                                                        <!--begin::Title-->
                                                        <div class="d-flex flex-column">
                                                            <h3 href="#" class="text-dark font-weight-bold text-hover-primary font-size-h4 mb-0">{{item.user.firstname}} {{item.user.lastname}}</h3>
                                                            
                                                        </div>
                                                        <!--end::Title-->
                                                    </div>
                                                    <!--end::Title-->
                                                </div>
                                                <!--end::User-->
                
        
        
                                                <div class="d-flex justify-content-center">
                                                    <span class="badge border mr-5 pt-3">{{item.profile.label}}</span>
                                                    <span class="badge border mr-5"><img class="  w-20px rounded-sm d-inline-block mr-3" src="{{item.user.country.icon}}" alt=""> {{item.user.country.name}}</span>
                                                    
                                                </div>
                                            
                                            

                                            </div>

                                            <div class="intro w-100 mt-5 pl-5 pt-3"> 
                                             
                                                
                                                
                                                <p>
                                                    <strong>{% trans into app.session.get('lng') %}Secteur d'activité {% endtrans %} : </strong> {{ item.user. activitySector}}
                                                
                                                </p>
                                                <p>
                                                    <strong>{% trans into app.session.get('lng') %}Offres proposées{% endtrans %} : </strong> 
                                                    
                                                    <span class="text-muted">{{ item.user.yourOffre}}</span>
                                                
                                                </p>
                                                <p>
                                                    <strong>{% trans into app.session.get('lng') %}Besoins Recherchés{% endtrans %} : </strong> <br>
                                                    <span class="text-muted">{{ item.user.yourNeeds}}</span>
                                                
                                                </p>  








                                     

                                                
                                            </div>
                                            <div class="actions d-flex justify-centen-center align-items-center" style="flex-direction: column;">

                                                <a href="{{ path('app_networking_show_participant',{id:item.id}) }}" class=" mb-3 btn btn-block btn-sm btn-light-secondary text-dark  font-weight-bolder text-uppercase py-4" >
                                                    {% trans into app.session.get('lng') %}Voir le profil{% endtrans %}
                                                </a>      


                                                {% set didSentInvitation = false %}


                                                {% for invitation in sentInvitations %}
                                                    {% if invitation.receiver.participant.id == item.id %}
        
                                                        {% set didSentInvitation = true %}
                                                       
                                                 
                                                    {% endif %} 
                                                        
                                                {% endfor %}
        
                                                {% if didSentInvitation == true %}
                                                <button disabled class="btn btn-block btn-sm btn-light-secondary text-dark  font-weight-bolder text-uppercase py-4 send-invitation" target="{{item.id}}" success-message-translate="{% trans into app.session.get('lng') %}Invitation envoyée{% endtrans %}" >{% trans into app.session.get('lng') %}Invitation envoyée{% endtrans %}</button>
                                                    {% else %}
                                                        <button class="btn btn-block btn-sm btn-light-secondary text-dark  font-weight-bolder text-uppercase py-4 send-invitation" target="{{item.id}}" success-message-translate="{% trans into app.session.get('lng') %}Invitation envoyée{% endtrans %}" >
                                                            {% trans into app.session.get('lng') %}Demander un rendez-vous{% endtrans %}
                                                        </button>      
                                                {% endif %}
                                                
        
