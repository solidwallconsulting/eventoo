{% extends 'base.html.twig' %}

{% block title %}Exposer index{% endblock %}

{% block body %}
    <h1>Exposer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Website</th>
                <th>LogoURL</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exposer in exposers %}
            <tr>
                <td>{{ exposer.id }}</td>
                <td>{{ exposer.name }}</td>
                <td>{{ exposer.website }}</td>
                <td>{{ exposer.logoURL }}</td>
                <td>
                    <a href="{{ path('exposer_show', {'id': exposer.id}) }}">show</a>
                    <a href="{{ path('exposer_edit', {'id': exposer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exposer_new') }}">Create new</a>
{% endblock %}
